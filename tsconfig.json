{
    "compilerOptions": {
      "jsx": "react",
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/js",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["src/types/*.ts", "node_modules", ".vscode", ".gitignore", "*.json"]
  }